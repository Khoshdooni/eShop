root = true

[*.cs]
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
charset = utf-8

# طول خط حداکثر
max_line_length = 120

# پارامترهای چندخطی → trailing comma
dotnet_style_trailing_comma_in_multiline = true:suggestion

# هیچ statement و block یک خطه حفظ نشود
csharp_preserve_single_line_statements = false
csharp_preserve_single_line_blocks = false

# باز شدن آکولاد در خط جدید
csharp_new_line_before_open_brace = all

# شکستن پارامترها در متدها، constructor و recordها
csharp_wrap_parameters = true
csharp_wrap_arguments = true
